<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itwillbs.mapper.MypageMapper">

  <!-- 회원정보 조회 (by user_id) -->
  <select id="getMember" resultType="com.itwillbs.domain.UserDTO">
    SELECT *
    FROM user
    WHERE user_id = #{user_id}
  </select>

  <!-- 회원정보 수정 -->
  <update id="updateMember">
    UPDATE user
    SET
      user_pwd = #{user_pwd},
      user_name = #{user_name},
      user_nick = #{user_nick},
      user_phone = #{user_phone},
      user_email = #{user_email},
      user_birth = #{user_birth}
    WHERE user_id = #{user_id}
  </update>

  <!-- 회원정보 삭제 -->
  <delete id="deleteMember">
    DELETE FROM user
    WHERE user_id = #{user_id} AND user_pwd = #{user_pwd}
  </delete>

  <!-- 내 게시글 목록 -->
  <select id="postBoardList" resultType="com.itwillbs.domain.UserDTO">
    SELECT *
    FROM post_board
    WHERE user_id = #{user_id}
  </select>

  <!-- 내 질문글 목록 -->
  <select id="questionBoardList" resultType="com.itwillbs.domain.UserDTO">
    SELECT *
    FROM question_board
    WHERE user_id = #{user_id}
  </select>
  
  <!-- 내 경기목록 -->
  <select id="matchList" resultType="com.itwillbs.domain.UserDTO">
    SELECT *
    FROM game_schedule
    WHERE user_id = #{user_id}
  </select>

</mapper>
